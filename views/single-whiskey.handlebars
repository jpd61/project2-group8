
<div class="m-3">
<!-- displaying articles -->
{{> inventory-cards whiskey}}
</div>  
<!-- displaying form and comments-->
<!-- only display if logged in -->
{{#if loggedIn}}
<div class="">
  <div class="row justify-content-center">
    <div class="card">
      <form class="comment-form">
        <div class="m-3">
          <textarea class="comment-body" name="comment-body"></textarea>
        </div>

        <div class="row justify-content-center">
          <button type="submit" class="btn-primary rounded m-3">Add Comment</button>
          <button type="button" class="upvote-btn btn-primary rounded m-3" id="upvote-btn">Vote</button>
          <button type="delete" class="btn-danger rounded m-3" id="delete-whiskey-btn">Delete Whiskey</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{/if}}



{{> comments whiskey.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
<script src="/javascript/delete-whiskey.js"></script>
{{/if}}